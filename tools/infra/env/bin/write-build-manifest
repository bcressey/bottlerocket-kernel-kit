#!/usr/bin/env bash

if [[ ! -d "./build/" ]]; then
    echo "ERROR: build directory not found" >&2
    exit 1
fi

find ./build/ \
    -maxdepth 1 \
    -mindepth 1 \
    -type f \
    -name '*.img*' \
    -exec sha256sum --tag {} \+ \
    | sort > build/manifest.sha256

sed -i 's,(./build/,(,' build/manifest.sha256
